#!/bin/bash
kitty_dir=/opt/kitty.app
kitty_desktop=/usr/share/applications/kitty.desktop
curl -L https://sw.kovidgoyal.net/kitty/installer.sh | sh /dev/stdin launch=n dest=/opt
rm -f  ~/.local/bin/kitty
ln -s $kitty_dir/bin/kitty ~/.local/bin/
cp $kitty_dir/share/applications/kitty.desktop $kitty_desktop
sed -i "s/Icon\=kitty/Icon\=\/opt\/kitty.app\/share\/icons\/hicolor\/256x256\/apps\/kitty.png/g" $kitty_desktop
