#!/bin/bash

version=14
if [ $# -eq 1 ]
then
	version=$1
elif [ $# -gt 1 ]
then
	echo "USAGE: $0 [version]"
	exit
fi

echo "Are you sure you want to install and update node/npm? Y|y for yes N|n for no"
read answer
if ! [ $answer == "Y" ] || ! [ $answer == "y" ]
then
	exit
fi
curl -sL https://deb.nodesource.com/setup_${version}.x | sudo -E bash -
sudo apt-get install -y nodejs
echo "FROM: https://github.com/nodesource/distributions/blob/master/README.md#debinstall"

sudo npm install npm@latest -g
echo "FROM: https://www.npmjs.com/get-npm"
